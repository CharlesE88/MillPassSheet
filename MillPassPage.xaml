<Page
    x:Class="MillPassApplication.MillPassPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MillPassApplication"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="#FF2D2D2D">
        <ComboBox x:Name="productComboBox" Margin="45,84,0,0" Width="298" Height="45" IsEditable="True" SelectionChanged="productComboBox_SelectionChanged"/>
        <Button x:Name="AddProductButton" Content="Add Product" Margin="1204,108,0,0" VerticalAlignment="Top" Click="AddProductButton_Click"/>
        <TextBox x:Name="ProductTextBox" HorizontalAlignment="Left" Margin="867,108,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="273"/>
        <Image x:Name="BarcodeImage" HorizontalAlignment="Left" Height="445" Margin="88,448,0,0" VerticalAlignment="Top" Width="445"/>
        <TextBlock HorizontalAlignment="Left" Margin="264,411,0,0" TextWrapping="Wrap" Text="Barcode Image" VerticalAlignment="Top"/>

    </Grid>
</Page>
